@model Final_Project_CIS262.Models.AllExamsModel

@{
    ViewBag.Title = "Index";
}

<h2>View Exams</h2>
<a href="/Exam/Add">Add an Exam</a>
<table>
    <tr>
        <th>
            Exam Id
        </th>
        <th>
            Student Id
        </th>
        <th>
            Score
        </th>
        <th>
            Edit Exam
        </th>
        <th>
            Delete Exam
        </th>
    </tr>
    @foreach (Final_Project_CIS262.Models.ExamModel exam in Model.Exams)
    {
        <tr>
            <td>
                @exam.ExamId
            </td>
            <td>
                @exam.StudentId
            </td>
            <td>
                @exam.Score
            </td>
            <td>
                <a href="/Exam/Edit?ExamId=@exam.ExamId"> Edit</a>
            </td>
            <td>
                <a href="/Exam/Delete?ExamId=@exam.ExamId">Delete</a>
            </td>
        </tr>
    }
</table>
